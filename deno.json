{
  "lock": false,
  "nodeModulesDir": true,
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "include": ["src/", "app/"],
    "exclude": ["src/module/**/*.test.ts", "node_modules"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/", "app/"],
    "exclude": ["src/module/**/*.test.ts", "node_modules"]
  },
  "imports": {
    "elysia": "npm:elysia"
  }
}
