{
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "lib": [
      "ESNext",
      "dom"
    ],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "bun-types",
      "vite/client"
      // add Bun global
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "~app/": [
        "./app/*"
      ],
      "#root/*": ["./src/*"]
    }
  }
}
