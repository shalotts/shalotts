{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"files": {
		"include": [
			"app/*.{ts,tsx}",
			"src/*.{ts,tsx}"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 100
	}
}
