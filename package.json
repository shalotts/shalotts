{
  "name": "shalotts",
  "module": "index.ts",
  "type": "module",
  "version": "0.20.00",
  "scripts": {
    "clean": "rm -rf dist && echo 'Done.'",
    "lint": "bun eslint --cache --fix ./",
    "dev:server": "bun index.ts",
    "debug": "DEBUG=vite:* bun run dev:server",
    "dev:vite": "DEBUG=vite:* bun run vite",
    "hot": "bun --hot index.ts",
    "pm2": "pm2 start --interpreter ~/.bun/bin/bun --name shalotts-server index.ts",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "@eslint-recommended",
      "plugin:vue/vue3-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:prettier/recommended"
    ],
    "parser": "vue-eslint-parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "parser": "@typescript-eslint/parser",
      "sourceType": "module",
      "project": [
        "tsconfig.json"
      ],
      "tsconfigRootDir": ".",
      "extraFileExtensions": [
        ".vue"
      ],
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "rules": {
      "template-curly-spacing": 0,
      "comma-dangle": 0,
      "no-multi-spaces": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-unsafe-assignment": 0,
      "@typescript-eslint/no-unsafe-member-access": 0,
      "@typescript-eslint/ban-ts-comment": 0,
      "object-curly-newline": [
        "error",
        {
          "consistent": true,
          "multiline": true
        }
      ],
      "vue/multi-word-component-names": 0,
      "unicorn/filename-case": 0
    },
    "root": true
  },
  "prettier": {
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "bracketSameLine": false,
    "proseWrap": "preserve",
    "arrowParens": "avoid",
    "trailingComma": "all",
    "endOfLine": "lf",
    "printWidth": 100,
    "importOrder": [
      "^@core/(.*)$",
      "^@server/(.*)$",
      "^@ui/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "bracketSpacing": true
  },
  "lint-staged": {
    "*.{ts,tsx}": ["eslint --fix", "prettier --write"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "bun run lint-staged"
    }
  },
  "imports": {
    "~/*": "./*",
    "~app/": "./app/*",
    "#root/": "./src/*"
  },
  "devDependencies": {
    "@eslint-recommended/eslint-config": "^16.0.3",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/express": "^4.17.21",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "bun-types": "latest",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.0",
    "lightningcss": "^1.22.1",
    "pm2": "^5.3.0",
    "vike-vue": "^0.5.0",
    "vite-plugin-eslint": "^1.8.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@bogeychan/elysia-etag": "^0.0.3",
    "@bogeychan/elysia-logger": "^0.0.13",
    "@elysiajs/cors": "^0.7.1",
    "@elysiajs/eden": "^0.7.4",
    "@netlify/functions": "^2.4.0",
    "@vitejs/plugin-vue": "^4.4.1",
    "elysia": "^0.7.24",
    "elysia-compression": "^0.0.6",
    "elysia-connect": "^0.1.1",
    "elysia-helmet": "^1.0.1",
    "elysia-nocache": "^0.0.1",
    "elysia-rate-limit": "^1.2.0",
    "elysia-vite": "^0.2.0",
    "eslint-plugin-vue": "^9.18.1",
    "lint-staged": "^15.1.0",
    "picocolors": "^1.0.0",
    "pino-pretty": "^10.2.3",
    "prettier": "^3.0.3",
    "vike": "latest",
    "vite": "^4.5.0",
    "vue": "^3.3.8"
  }
}
